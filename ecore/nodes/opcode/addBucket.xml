<NODE export_version="0.5" nodetype="opcode" title="addBucket">
  <field name="author_user" type="noderef" type_nodetype="user,nodetype">root</field>
  <field name="authoraccess" type="literal_value">iiii</field>
  <field name="code" type="literal_value">foreach my $bnode ($query->param())
{
  next unless($bnode =~ /^bnode_([0-9]*)$/);

  my $node = getNode($1, 'light');
  next unless $node and $node->hasAccess($USER, 'r');

  $$VARS{nodebucket} .= "," if($$VARS{nodebucket} &amp;&amp; $$VARS{nodebucket} ne "");
  $$VARS{nodebucket} .= $1;
}
return;</field>
