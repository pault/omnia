  <field name="context" type="literal_value">&lt;table width=100% border=0 cellspacing=1&gt;
&lt;tr&gt;
 &lt;td width=100% [%

my $THEME = $this-&gt;get_theme;

   my $bgcol = $$THEME{nodeletBodyColor};
   $bgcol ||= &quot;#CCCCCC&quot;;
   &quot;bgcolor='$bgcol'&quot;; 
%]&gt;CONTAINED_STUFF&lt;/td&gt;
 &lt;td width=1 valign=top align=center bgColor='[%
my $THEME = $this-&gt;get_theme;
    return $$THEME{nodeletTitleColor} if $$THEME{nodeletTitleColor};
    &quot;#CC99FF&quot;; 
%]'&gt;[%

$this-&gt;miniNodelet($$NODELET{node_id}, 'center', 'top'); 
%]
 &lt;/td&gt;
&lt;/tr&gt;
&lt;/table&gt;</field>
