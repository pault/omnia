<NODE export_version="0.5" nodetype="nodelet" title="Login Nodelet">
  <field type="noderef" type_nodetype="user,nodetype" name="author_user">root</field>
  <field type="literal_value" name="authoraccess">iiii</field>
  <field type="literal_value" name="dynamicauthor_permission">0</field>
  <field type="literal_value" name="dynamicgroup_permission">0</field>
  <field type="literal_value" name="dynamicguest_permission">0</field>
  <field type="literal_value" name="dynamicother_permission">-1</field>
  <field type="literal_value" name="group_usergroup">-1</field>
  <field type="literal_value" name="groupaccess">iiii-</field>
  <field type="literal_value" name="guestaccess">--x--</field>
  <field type="noderef" type_nodetype="location,nodetype" name="loc_location">nodelet</field>
  <field type="literal_value" name="mini_nodelet">0</field>
  <field type="literal_value" name="nlcode">[%
my $str = "";
if ($query->param('op') eq 'login') { 
  $str .="Oops.  You must have the wrong login or password or something:&lt;br>";
} 
$str;
%]

[%
$query->start_form("POST", $ENV{script_name}) .
$query->hidden("node_id", getId($NODE)) . "\n" .
$query->hidden("lastnode_id", $query->param("lastnode_id")) . "\n";
%]
&lt;input type="hidden" name="op" value="login">
&lt;table border=0>
&lt;tr>
 &lt;td>&lt;font size='2'>Login:&lt;/font>&lt;/td>
 &lt;td>
  [% $query->textfield (-name => "user", -size => 10, -maxlength => 100); %]
 &lt;/td>
&lt;/tr>
&lt;tr>
 &lt;td>&lt;font size='2'>Password&lt;/font>&lt;/td>
 &lt;td>
  [% $query->password_field(-name => "passwd", -size => 10, -maxlength => 10); %]
 &lt;/td>
&lt;/tr>
&lt;/table>
&lt;font size='2'>
[%
$query->checkbox("expires", "", "+10y", "save me a cookie") . 
$query->submit("login", "Login") .
$query->end_form;
%]
&lt;p>
Don't have an account?&lt;br>
[% linkNodeTitle("Create a new user"); %]&lt;br>
[% my $N=getNode("What is my password",'superdoc'); 
   linkNode($N,"Forgot your password?"); %]
&lt;/font></field>
  <field type="literal_value" name="nlgoto">0</field>
  <field type="literal_value" name="nltext">

&lt;FORM METHOD="POST"  ENCTYPE="application/x-www-form-urlencoded">
&lt;INPUT TYPE="hidden" NAME="node_id" VALUE="114">


&lt;input type="hidden" name="op" value="login">
&lt;table border=0>
&lt;tr>
 &lt;td>&lt;font size='2'>Login:&lt;/font>&lt;/td>
 &lt;td>
  &lt;INPUT TYPE="text" NAME="user"  SIZE=10 MAXLENGTH=100>
 &lt;/td>
&lt;/tr>
&lt;tr>
 &lt;td>&lt;font size='2'>Password&lt;/font>&lt;/td>
 &lt;td>
  &lt;INPUT TYPE="password" NAME="passwd"  SIZE=10 MAXLENGTH=10>
 &lt;/td>
&lt;/tr>
&lt;/table>
&lt;font size='2'>
&lt;INPUT TYPE="checkbox" NAME="expires" VALUE="+10y">save me a permanent cookie
&lt;INPUT TYPE="submit" NAME="login" VALUE="Login">&lt;/FORM>
&lt;p>
Don't have an account?&lt;br>
&lt;a href="/~paco/temp/index.pl?node=Create%20a%20new%20user">Create a new user&lt;/a>.
&lt;/font></field>
  <field type="literal_value" name="otheraccess">-----</field>
  <field type="noderef" type_nodetype="container,nodetype" name="parent_container">general nodelet container</field>
  <field type="literal_value" name="title">Login Nodelet</field>
  <field type="noderef" type_nodetype="nodetype,nodetype" name="type_nodetype">nodelet</field>
  <field type="literal_value" name="updateinterval">0</field>
</NODE>
