<NODE export_version="0.5" nodetype="nodelet" title="Login Nodelet">
  <field name="author_user" type="noderef" type_nodetype="user,nodetype">root</field>
  <field name="authoraccess" type="literal_value">iiii</field>
  <field name="dynamicauthor_permission" type="literal_value">0</field>
  <field name="dynamicgroup_permission" type="literal_value">0</field>
  <field name="dynamicguest_permission" type="literal_value">0</field>
  <field name="dynamicother_permission" type="literal_value">-1</field>
  <field name="group_usergroup" type="literal_value">-1</field>
  <field name="groupaccess" type="literal_value">iiii-</field>
  <field name="guestaccess" type="literal_value">--x--</field>
  <field name="loc_location" type="noderef" type_nodetype="location,nodetype">nodelet</field>
  <field name="mini_nodelet" type="literal_value">0</field>
  <field name="nlcode" type="literal_value">[%
my $str = "";
if ($query->param('op') eq 'login') { 
  $str .="Oops.  You must have the wrong login or password or something:&lt;br>";
} 
$str;
%]

[%
$query->start_form("POST", $ENV{SCRIPT_NAME}) .
$query->hidden("node_id", getId($NODE)) . "\n" .
$query->hidden("lastnode_id", $query->param("lastnode_id")) . "\n";
%]
&lt;input type="hidden" name="op" value="login">
&lt;table border=0>
&lt;tr>
 &lt;td>&lt;font size='2'>Login:&lt;/font>&lt;/td>
 &lt;td>
  [% $query->textfield (-name => "user", -size => 10, -maxlength => 100); %]
 &lt;/td>
&lt;/tr>
&lt;tr>
 &lt;td>&lt;font size='2'>Password&lt;/font>&lt;/td>
 &lt;td>
  [% $query->password_field(-name => "passwd", -size => 10, -maxlength => 10); %]
 &lt;/td>
&lt;/tr>
&lt;/table>
&lt;font size='2'>
[%
$query->checkbox("expires", "", "+10y", "save me a cookie") . 
$query->submit("login", "Login") .
$query->end_form;
%]
&lt;p>
Don't have an account?&lt;br>
[% linkNodeTitle("Create a new user"); %]&lt;br>
[% my $N=getNode("What is my password",'superdoc'); 
   linkNode($N,"Forgot your password?"); %]
&lt;/font></field>
  <field name="nlgoto" type="literal_value">0</field>
  <field name="nltext" type="literal_value">

&lt;FORM METHOD="POST"  ENCTYPE="application/x-www-form-urlencoded">
&lt;INPUT TYPE="hidden" NAME="node_id" VALUE="114">


&lt;input type="hidden" name="op" value="login">
&lt;table border=0>
&lt;tr>
 &lt;td>&lt;font size='2'>Login:&lt;/font>&lt;/td>
 &lt;td>
  &lt;INPUT TYPE="text" NAME="user"  SIZE=10 MAXLENGTH=100>
 &lt;/td>
&lt;/tr>
&lt;tr>
 &lt;td>&lt;font size='2'>Password&lt;/font>&lt;/td>
 &lt;td>
  &lt;INPUT TYPE="password" NAME="passwd"  SIZE=10 MAXLENGTH=10>
 &lt;/td>
&lt;/tr>
&lt;/table>
&lt;font size='2'>
&lt;INPUT TYPE="checkbox" NAME="expires" VALUE="+10y">save me a permanent cookie
&lt;INPUT TYPE="submit" NAME="login" VALUE="Login">&lt;/FORM>
&lt;p>
Don't have an account?&lt;br>
&lt;a href="/~paco/temp/index.pl?node=Create%20a%20new%20user">Create a new user&lt;/a>.
&lt;/font></field>
  <field name="otheraccess" type="literal_value">-----</field>
  <field name="parent_container" type="noderef" type_nodetype="container,nodetype">general nodelet container</field>
  <field name="title" type="literal_value">Login Nodelet</field>
  <field name="type_nodetype" type="noderef" type_nodetype="nodetype,nodetype">nodelet</field>
  <field name="updateinterval" type="literal_value">0</field>
</NODE>
