  <field name="code" type="literal_value">my ($type) = @_;

return "" unless($type);
my $TYPE = $DB->getType($type);
return "" unless($TYPE);

my $tables = $TYPE->getTableArray(1);
my $str;
foreach my $table (@$tables)
{
  $str .="$table table fields:&lt;ul>\n";
  $str .= "&lt;li>\n";
  $str .= join "\n&lt;li>", sort $DB->getFields($table);
  $str .= "\n&lt;/ul>";
}

$str;</field>
