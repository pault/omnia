<NODE export_version="0.5" nodetype="htmlcode" title="themeselector">
  <field type_nodetype="user,nodetype" name="author_user" type="noderef">root</field>
  <field name="authoraccess" type="literal_value">iiii</field>
  <field name="code" type="literal_value">use Everything::FormMenu;

if($query->param('settheme'))
{
  # update the users's settings.
  $$VARS{preferred_theme} = $query->param('settheme');
  getTheme();
}

my $menu = new Everything::FormMenu();

$menu->addType('theme', 1, $USER, 'x');
$menu->addType('themesetting', 1, $USER, 'x');

$menu->writePopupHTML($query, "settheme", $$VARS{preferred_theme});</field>
