<NODE export_version="0.5" nodetype="htmlpage" title="mail display page">
  <field type="noderef" type_nodetype="user,nodetype" name="author_user">root</field>
  <field type="literal_value" name="authoraccess">iiii</field>
  <field type="literal_value" name="displaytype">display</field>
  <field type="literal_value" name="dynamicauthor_permission">-1</field>
  <field type="literal_value" name="dynamicgroup_permission">-1</field>
  <field type="literal_value" name="dynamicguest_permission">-1</field>
  <field type="literal_value" name="dynamicother_permission">-1</field>
  <field type="literal_value" name="group_usergroup">-1</field>
  <field type="literal_value" name="groupaccess">iiii-</field>
  <field type="literal_value" name="guestaccess">iiii-</field>
  <field type="noderef" type_nodetype="location,nodetype" name="loc_location">htmlpage</field>
  <field type="literal_value" name="otheraccess">iiii-</field>
  <field type="literal_value" name="ownedby_theme">0</field>
  <field type="literal_value" name="page">&lt;TABLE width=100% cellpadding=0 cellspacing=1 border=0>
&lt;TR bgcolor=[%
  $$VARS{mailhead_color} or "#CCCCCC";
%]>&lt;TH>To:&lt;/TH>&lt;TD width=100%>[%linkNode($$NODE{author_user})%]&lt;TD>&lt;/TR>
&lt;TR bgcolor=[%
  $$VARS{mailhead_color} or "#CCCCCC";
%]>&lt;TH>From:&lt;/TH>&lt;/TH>&lt;TD width=100%>[%
if (not $$NODE{from_address}) {
  return "&lt;i>nobody&lt;/i>";
} else {
  return $$NODE{from_address};
}
#eventually this will have links to an addressbook
#as well as a home node if a person exists within the 
#system
%]&lt;/TD>&lt;/TR>
&lt;/TABLE>
[{parseLinks:doctext}]
</field>
  <field type="noderef" type_nodetype="nodetype,nodetype" name="pagetype_nodetype">mail</field>
  <field type="noderef" type_nodetype="container,nodetype" name="parent_container">general container</field>
  <field type="literal_value" name="permissionneeded">r</field>
  <field type="literal_value" name="title">mail display page</field>
  <field type="noderef" type_nodetype="nodetype,nodetype" name="type_nodetype">htmlpage</field>
</NODE>
