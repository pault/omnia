	<page table="htmlpage">&lt;multicol cols=3 width=100%&gt;
&lt;ul&gt;
[%
my $nodes = $NODE-&gt;listNodes();

return "No nodes in this location" unless(@$nodes &gt; 0);

my $str;
my $title;
my %params;
foreach my $node (@$nodes)
{
  $node = getNode($node, 'light');

  $title = $$node{title};
  $title .= "/" if($node-&gt;isOfType('location'));
  $title .= "@" if($node-&gt;isOfType('symlink'));

  undef %params;
  $params{onMouseOver} = "\"window.status='$$node{title}" .
     "($$node{node_id}) - $$node{type}{title}';\"";
  $str .= "&lt;li&gt;&lt;nowrap&gt;" . linkNode($node, $title, undef, \%params) . "\n";  
}

return $str;
%]
&lt;/ul&gt;
&lt;/multicol&gt;</page>
